@model List<Project> 


<thead class="thead-light" style="border-bottom-width:0px; border-bottom-color:green; border-top-style:hidden">
    <tr style="border-bottom-width: 0px; border-bottom-color: green">
        <th scope="col-sm-3">
            <p>
                <small>
                    PROJECT NAME
                </small>
            </p>
        </th>
        <th scope="col-sm-6">
            <p>
                <small>
                    DESCRIPTION
                </small>
            </p>
        </th>
        <th scope="col-sm-3">
            <p style="float:right">
                <small>
                    ACTIONS
                </small>
            </p>
        </th>
    </tr>
</thead>
<tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr scope="row">
            <td hidden id="projName" class="col-sm-3 text-muted" onclick="location.href = '@Url.Action("ProjectInformation", "Home", new { id=Model[i].Id })'">
                <p class="mt-3">
                    <small>
                        @Model[i].Id
                    </small>
                </p>
            </td>
            <td id="projName" class="col-sm-3 text-muted" onclick="location.href = '@Url.Action("ProjectInformation", "Home", new { id=Model[i].Id })'">
                <p class="mt-3">
                    <small>
                        @Model[i].ProjectName
                    </small>
                </p>
            </td>
            <td id="projDesc" class="col-sm-6 text-muted" onclick="location.href = '@Url.Action("ProjectInformation", "Home", new { id=Model[i].Id })'">
                <p class="mt-3">
                    <small>
                        @Model[i].ProjectDescription
                    </small>
                </p>
            </td>
            <td class="col-sm-3">
                <a class="btn btn-primary btn-sm" id="editProjectBtn" data="@Model[i].Id" style="font-size:12px; width:auto;
                                    float:right; margin-left:4px">Edit</a>
                <input hidden id="projectIdInput" value="@Model[i].Id" />
                <a asp-controller="Home" asp-action="DeleteProject" class="btn btn-primary btn-sm" asp-route-Id="@Model[i].Id" style="font-size:12px; width:auto;
                                    float:right">Delete</a>
            </td>
        </tr>
    }
</tbody>