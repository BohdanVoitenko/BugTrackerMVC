@model ChangePasswordViewModel


<div class="container custom-container" style="max-width:60vw">
    <h5 class="mt-5" style="text-align:center">Change Password</h5>
    <div class="row">
        <div class="col-md-10" style="margin:auto">
            <form method="post">
                <div asp-validation-summary="All"></div>
                <input hidden asp-for="Id"/>
                <div class="form-group mt-5">
                    <input asp-for="NewPassword" placeholder="new password" class="form-control custom-input" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
                <div class="form-group mt-5">
                    <input asp-for="ConfirmNewPassword" placeholder="New password confirmation" class="form-control custom-input" />
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                </div>
                <button type="submit" class="btn button-blue mt-5 mb-4" value="Update" style="width:auto">Submit</button>
            </form>
        </div>
    </div>
</div>