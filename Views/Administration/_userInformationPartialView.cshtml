@model User

<form method="post" asp-controller="Administration" asp-action="UpdateMember">
    <div asp-validation-summary="All">
        <input hidden id="memberId" asp-for="Id" value="@Model.Id" />
        <div class="mt-3">
            <label>Name</label>
            <div class="mt-2">
                <input id="mame" asp-for="UserName" class="form-control custom-input" value="@Model.UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
        </div>
        <div class="mt-3">
            <label asp-for="Email"></label>
            <div class="mt-2">
                <input id="email" asp-for="Email" class="form-control custom-input" value="@Model.Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-3">
            <label>Phone number</label>
            <div class="mt-2">
                <input id="phone" asp-for="PhoneNumber" class="form-control custom-input" value="@Model.PhoneNumber" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button id="submitUpdateBtn" class="btn button-green btn-sm mt-3" style="float:right" type="submit">Update</button>
    <a asp-controller="Administration" asp-action="RemoveMember" asp-route-id="@Model.Id" id="removeBtn" class="btn button-red btn-sm mt-3">Remove</a>
</form>




